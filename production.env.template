# Production Environment Configuration for Stel Docs AI
# Copy this file to .env and update with your values

# ===== DJANGO SETTINGS =====
DEBUG=False
SECRET_KEY=your-super-secret-production-key-here
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# ===== GOOGLE GEMINI API =====
GOOGLE_API_KEY=your-google-gemini-api-key

# ===== CHROMADB DEPLOYMENT MODE =====
# Options: local, server, docker, cloud
CHROMA_DEPLOYMENT_MODE=server

# ===== CHROMADB SERVER MODE (when CHROMA_DEPLOYMENT_MODE=server) =====
CHROMA_HOST=your-chromadb-server.com
CHROMA_PORT=8000

# ===== CHROMADB DOCKER MODE (when CHROMA_DEPLOYMENT_MODE=docker) =====
CHROMA_DOCKER_HOST=chromadb
CHROMA_DOCKER_PORT=8000

# ===== CHROMADB CLOUD MODE (when CHROMA_DEPLOYMENT_MODE=cloud) =====
CHROMA_URL=https://your-chromadb-cloud-instance.com
CHROMA_API_KEY=your-chromadb-cloud-api-key

# ===== DATABASE =====
# For production, consider PostgreSQL
# DATABASE_URL=postgresql://user:password@host:port/database

# ===== REDIS CACHING (Optional) =====
REDIS_URL=redis://localhost:6379/0

# ===== MONITORING =====
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ===== SECURITY =====
SECURE_SSL_REDIRECT=true
CSRF_COOKIE_SECURE=true
SESSION_COOKIE_SECURE=true

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=/var/log/stel-docs-ai.log

# ===== BACKUP =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30 